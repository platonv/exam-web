<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>KeywordServlet</servlet-name>
        <servlet-class>ro.vladplaton.examweb.KeywordServlet</servlet-class>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>KeywordServlet</servlet-name>
        <url-pattern>/keyword/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DocumentServlet</servlet-name>
        <servlet-class>ro.vladplaton.examweb.DocumentServlet</servlet-class>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>DocumentServlet</servlet-name>
        <url-pattern>/document/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TemplateServlet</servlet-name>
        <servlet-class>ro.vladplaton.examweb.TemplateServlet</servlet-class>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>TemplateServlet</servlet-name>
        <url-pattern>/template/*</url-pattern>
    </servlet-mapping>
</web-app>